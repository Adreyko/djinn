{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@djinn/models": [
                "../model/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../model/user/user.interface.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}